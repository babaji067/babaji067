{
  "name": "BioMuteBot",
  "description": "Fast Telegram Bio & Link Mute Bot with MongoDB, Advanced Broadcast & Restart System",
  "keywords": [
    "telegram",
    "bot",
    "python",
    "biomute",
    "moderation",
    "broadcast",
    "mongodb"
  ],
  "repository": "https://github.com/yourusername/yourrepo",
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram Bot Token from @BotFather",
      "value": ""
    },
    "OWNER_ID": {
      "description": "Your Telegram User ID (numeric)",
      "value": ""
    },
    "UPDATE_CHANNEL": {
      "description": "Update channel username (with or without @)",
      "value": "@YourChannel"
    },
    "MONGO_URI": {
      "description": "MongoDB connection URI (MongoDB Atlas recommended)",
      "value": ""
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [],
  "stack": "heroku-22"
}
