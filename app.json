{
  "name": "BioMuteBot",
  "description": "A Telegram moderation bot with bio mute, broadcast, and group management features.",
  "repository": "https://github.com/your-username/BioMuteBot",
  "keywords": [
    "telegram",
    "bot",
    "python",
    "moderation",
    "heroku"
  ],
  "env": {
    "BOT_TOKEN": {
      "description": "Your bot token from @BotFather",
      "required": true
    },
    "OWNER_ID": {
      "description": "Telegram User ID of the bot owner",
      "required": true
    },
    "UPDATE_CHANNEL": {
      "description": "Username of your update channel (without @)",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
