{
  "name": "BioMuteBot",
  "description": "Telegram Bio Mute Bot with MongoDB, Broadcast system and Heroku support",
  "repository": "https://github.com/yourusername/biomutebot",
  "logo": "https://telegram.org/img/t_logo.png",
  "keywords": [
    "telegram",
    "bot",
    "biomutebot",
    "mongodb",
    "python",
    "heroku"
  ],
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram Bot Token from @BotFather",
      "required": true
    },
    "OWNER_ID": {
      "description": "Telegram User ID of bot owner",
      "required": true
    },
    "UPDATE_CHANNEL": {
      "description": "Telegram update channel username (without @)",
      "required": true
    },
    "MONGO_URI": {
      "description": "MongoDB connection URI",
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "stack": "heroku-22"
}
